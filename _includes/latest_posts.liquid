<div class="news">
  {% if site.posts != blank %}
    {% assign posts_size = site.posts | size %}
    <div class="table-responsive">
      <table class="table table-sm table-borderless">
        {% assign latest_posts_limit = include.limit | default: 3 %}
        {% for item in site.posts limit: latest_posts_limit %}
          <tr>
            <td style="width: 100%; border: none;">
              <div style="font-weight: bold; color: inherit;">
                {{ item.title }}
              </div>
              
              {% if item.description %}
                <div style="font-size: 0.95rem; color: #666; margin-top: 4px;">
                  {{ item.description }}
                </div>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No posts so far...</p>
  {% endif %}
</div>
